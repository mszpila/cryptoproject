{
  "name": "server",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "NODE_ENV=prod LAZY_ENV=prod CONFIG='/config.prod.yaml' nest start",
    "start:dev": "NODE_ENV=test CONFIG= nest start --watch",
    "start:ext": "NODE_ENV=test LAZY_ENV=prod CONFIG='/config.dev.yaml' nest start --watch",
    "start:pro": "NODE_ENV=test LAZY_ENV=prod CONFIG='/config.prod.yaml' nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "NODE_ENV=prod LAZY_ENV=prod CONFIG='/config.prod.yaml' node dist/main",
    "watch": "nest build --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "CONFIG= jest",
    "test:ext": "LAZY_ENV=prod CONFIG='/config.dev.yaml' jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.54.0",
    "@bundlr-network/client": "^0.6.0",
    "@elastic/elasticsearch": "^8.0.0",
    "@nestjs/common": "^8.0.0",
    "@nestjs/config": "^1.2.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/event-emitter": "^1.1.0",
    "@nestjs/mongoose": "^9.0.2",
    "@nestjs/platform-express": "^8.0.0",
    "arbundles": "^0.6.15",
    "arweave": "^1.10.23",
    "arweave-stream-tx": "^1.1.0",
    "bcrypt": "^5.0.1",
    "bson": "^4.6.2",
    "busboy": "^1.4.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "ethers": "^5.5.4",
    "eventemitter2": "^6.4.5",
    "global": "^4.4.0",
    "hardhat-shorthand": "^1.0.0",
    "inversify": "^6.0.1",
    "js-yaml": "^4.1.0",
    "moment": "^2.29.1",
    "mongoose": "^6.2.8",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "testweave-sdk": "^0.2.2",
    "util": "^0.12.4",
    "uuid": "^8.3.2",
    "uuid-mongodb": "^2.5.0",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/busboy": "^1.3.0",
    "@types/express": "^4.17.13",
    "@types/jest": "27.4.0",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.2.5",
    "jest-transform-yaml": "1.0.0",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "jest": {
    "rootDir": "",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts",
      "yaml"
    ],
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest",
      "\\.yaml$": "jest-transform-yaml"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
